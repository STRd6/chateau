*
  box-sizing: border-box

html, body
  height: 100%

body
  margin: 0
  overflow: hidden

chateau
  display: flex
  height: 100%
  position: relative

  > word-area
    display: block
    pointer-events: none
    position: absolute
    width: 100%
    height: 100%

    > words
      border: 1px solid black
      border-radius: 4px
      background-color: white
      padding: 0.5em
      position: absolute
      display: inline-block

  > canvas
    flex: 0 0 auto
    margin: auto

  > rooms
    position: absolute
    right: 0

    > room
      display: block
      width: 200px

  > form
    position: absolute
    bottom: 0
