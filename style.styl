*
  box-sizing: border-box

html, body
  height: 100%

body
  font-family: Sans-Serif
  font-size: 14px
  line-height: 18px
  margin: 0
  overflow: hidden

chateau
  display: flex
  height: 100%
  position: relative

  > viewport
    flex: 0 0 auto
    height: 540px
    margin: auto
    position: relative
    width: 960px

    > word-area
      display: block
      height: 100%
      left: 0
      pointer-events: none
      position: absolute
      top: 0
      width: 100%
  
      > words
        border: 1px solid black
        border-radius: 4px
        background-color: white
        padding: 0.5em
        position: absolute
        display: inline-block

  > rooms
    border-left: 1px solid gray
    height: 100%
    left: 100%
    padding: 1em
    position: absolute
    width: 200px

    &.show
      left: calc(100% - 200px)

    > room
      display: flex
      margin-bottom: 1em
      width: 200px

      > img
        border: 1px solid gray
        width: 82px
        height: 47px
        flex: 0 0 auto

      > span.name
        margin: auto

  > form
    position: absolute
    bottom: 0
