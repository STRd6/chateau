- AvatarControl = require "./avatar-control"
- RoomList = require "./room-list"

chateau
  viewport
    = @canvas
    word-area
      = @words

  actions
    form(submit=@saySubmit)
      input
      button Speak

  tab-drawer
    = RoomList this

    prop-control
      tab(click=@toggleOpen) Props

    sound-control
      tab(click=@toggleOpen) Sounds

    = AvatarControl(this)

    account-control
      tab(click=@toggleOpen) Account
